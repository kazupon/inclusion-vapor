{
  "name": "inclusion-vapor",
  "private": true,
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kazupon/inclusion-vapor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/inclusion-vapor.git"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">= 18.18"
  },
  "scripts": {
    "build": "run-p \"build:*\"",
    "build:svelte": "run-s \"build:svelte:compiler\" \"build:svelte:sfc\" \"build:svelte:unplugin\" \"build:svelte:template\"",
    "build:svelte:compiler": "pnpm run --filter=./packages/svelte-template-compiler build",
    "build:svelte:sfc": "pnpm run --filter=./packages/svelte-sfc-compiler build",
    "build:svelte:template": "pnpm run --filter=./packages/svelte-template-explorer build",
    "build:svelte:unplugin": "pnpm run --filter=./packages/unplugin-svelte build",
    "debug:eslint": "pnpx @eslint/config-inspector --config eslint.config.mjs",
    "dev:svelte:compiler": "run-s \"build:svelte:compiler\" \"build:svelte:template\" serve",
    "fix": "run-p \"fix:* {@}\" --",
    "fix:eslint": "eslint . --fix",
    "fix:prettier": "prettier . --write",
    "lint": "run-p \"lint:* {@}\" --",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "open": "open http://localhost:3000/packages/svelte-template-explorer/local.html",
    "play": "pnpm run --filter=./packages/playground dev",
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "pnpm build",
    "serve": "serve",
    "test": "vitest run",
    "typecheck": "tsc -p .",
    "watch:unplugin": "pnpm run --filter=./packages/unplugin-svelte watch"
  },
  "devDependencies": {
    "@kazupon/eslint-config": "^0.13.3",
    "@kazupon/prettier-config": "^0.1.1",
    "@types/node": "^20.14.10",
    "eslint": "^9.9.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-svelte": "^2.43.0",
    "eslint-plugin-unicorn": "^54.0.0",
    "eslint-plugin-vue": "^9.27.0",
    "eslint-plugin-yml": "^1.14.0",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.2",
    "pkg-pr-new": "^0.0.20",
    "prettier": "^3.3.2",
    "serve": "^14.2.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.1.0",
    "vitest": "^2.0.1"
  },
  "pnpm": {
    "overrides": {
      "estree-walker": "^2.0.2",
      "unplugin-isolated-decl": "^0.4.1"
    },
    "patchedDependencies": {
      "svelte@4.2.18": "patches/svelte@4.2.18.patch"
    }
  },
  "prettier": "@kazupon/prettier-config",
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,mjs,cjs,vue,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  }
}
