{
  "name": "svelte-vapor",
  "private": true,
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kazupon/svelte-vapor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/svelte-vapor.git"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">= 18.18"
  },
  "scripts": {
    "prepare": "git config --local core.hooksPath .githooks",
    "prepublishOnly": "pnpm build",
    "lint": "run-p \"lint:* {@}\" --",
    "lint:prettier": "prettier . --check",
    "lint:eslint": "eslint .",
    "fix": "run-p \"fix:* {@}\" --",
    "fix:prettier": "prettier . --write",
    "fix:eslint": "eslint . --fix",
    "debug:eslint": "pnpx @eslint/config-inspector --config eslint.config.mjs",
    "test": "vitest",
    "build": "run-p \"build:*\"",
    "build:compiler": "pnpm run --filter=./packages/compiler build",
    "build:template-explorer": "pnpm run --filter=./packages/template-explorer build",
    "open": "open http://localhost:3000/packages/template-explorer/local.html",
    "dev:compiler": "run-s \"build\" serve",
    "serve": "serve",
    "typecheck": "tsc -p ."
  },
  "devDependencies": {
    "@kazupon/eslint-config": "^0.10.0",
    "@kazupon/prettier-config": "^0.1.1",
    "@types/node": "^20.14.10",
    "eslint": "^9.6.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-unicorn": "^54.0.0",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.2",
    "prettier": "^3.3.2",
    "serve": "^14.2.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0",
    "vitest": "^2.0.1"
  },
  "pnpm": {
    "overrides": {
      "estree-walker": "^2.0.2",
      "unplugin-isolated-decl": "^0.4.1"
    }
  },
  "prettier": "@kazupon/prettier-config",
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ]
  }
}
